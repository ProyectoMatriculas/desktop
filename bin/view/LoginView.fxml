<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoginController">
   <left>
      <AnchorPane prefHeight="600.0" prefWidth="400.0" style="-fx-background-color: #ff464e;" BorderPane.alignment="CENTER" />
   </left>
   <center>
      <AnchorPane prefHeight="600.0" prefWidth="400.0" style="-fx-background-color: #ffffff;" BorderPane.alignment="CENTER">
         <children>
            <PasswordField fx:id="fieldPassword" layoutX="130.0" layoutY="275.0" promptText="Password" style="-fx-border-color: #ff464e; -fx-background-color: transparent; -fx-border-width: 0px 0px 2px 0px;">
               <font>
                  <Font name="Arial Bold" size="13.0" />
               </font></PasswordField>
            <TextField fx:id="fieldEmail" layoutX="130.0" layoutY="172.0" promptText="Email" style="-fx-border-color: #ff464e; -fx-background-color: transparent; -fx-border-width: 0px 0px 2px 0px;">
               <font>
                  <Font name="Arial Bold" size="13.0" />
               </font></TextField>
            <Button fx:id="btnExit" layoutX="327.0" layoutY="14.0" mnemonicParsing="false" onAction="#exit" prefHeight="40.0" prefWidth="44.0" style="-fx-background-color: transparent;" text="X" textFill="#ff464e">
               <font>
                  <Font name="System Bold" size="25.0" />
               </font></Button>
            <Button fx:id="btnLogin" layoutX="154.0" layoutY="434.0" mnemonicParsing="false" onAction="#login" prefHeight="39.0" prefWidth="92.0" style="-fx-background-color: #ff464e; -fx-border-radius: 0;" text="Login" textFill="WHITE">
               <font>
                  <Font name="Arial Bold" size="15.0" />
               </font></Button>
         </children>
      </AnchorPane>
   </center>
</BorderPane>
